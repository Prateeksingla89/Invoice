@model POC.ViewModel.InvoiceViewModel


@using (@Html.BeginForm("AddRow", "Invoice",FormMethod.Get))
{
    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add New Item</h4>
                </div>
                <div class="modal-body">
                    <table>
                        <thead>
                            <tr>
                                <th>Item Name</th>
                                <th>Tax</th>
                                <th>Qty</th>
                                <th>Unit Value</th>
                            </tr>
                        </thead>
                        <tr class="contacts-record-template-popup">
                            <td>
                                @Html.DropDownList("ProductName", new SelectList(Model.productsList, "ProductId", "Name"), " Select Product", new { @class = "form-control" })
                            </td>
                            <td> @Html.Editor("GSTTax", new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</td>
                            <td> @Html.Editor("Quantity", new { htmlAttributes = new { @class = "form-control" } })</td>
                            <td> @Html.Editor("Value", new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly" } })</td>
                            <td> @Html.Hidden("InvoiceLineId", new { htmlAttributes = new { @class = "form-control" } })</td>
                        </tr>
                        </table>
                </div>
                <div class="modal-footer">
                    @Html.HiddenFor(m => m.InvoiceID)
                    @Html.HiddenFor(m => m.InvoiceNumber)
                    <button type="Submit" class="btn btn-danger classAdd"  data-dismiss="modal" >Add Item</button>
                </div>
            </div>

        </div>
    </div>


}